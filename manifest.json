{
  "name": "Subtask Manager",
  "description": "Link and view subtasks between Trello cards.",
  "author": "your name or org",
  "capabilities": {
    "card-buttons": [
      {
        "text": "Add Subtask",
        "callback": "onAddSubtask"
      }
    ],
    "card-detail-badges": [
      {
        "title": "Subtasks",
        "callback": "renderSubtasksBadge"
      }
    ],
    "card-back-section": {
      "title": "Subtasks",
      "icon": "https://trello-subtask-manager.netlify.app/logo.png",
      "content": {
        "type": "iframe",
        "url": "subtask-section.html",
        "height": 180
      }
    }
  },
  "icon": {
    "url": "https://trello-subtask-manager.netlify.app/logo.png"
  },
  "authorization": {
    "type": "none"
  },
  "connectors": {
    "iframe": {
      "url": "https://trello-subtask-manager.netlify.app",
      "height": 200
    }
  }
}
